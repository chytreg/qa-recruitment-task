enable_defaults! { ENV.fetch('RACK_ENV', 'development').match(/development|test/) }

# This app domain (used for links and redirects)
variable :HOST,                 :string,  default: 'localhost:3000'

# Authentic settings
variable :AUTHENTIC_HOST,       :string,  default: ''
variable :ID_HUSSARS_HOST,      :string,  default: 'sampleHussarsHost'
variable :HUSSARS_KEY,          :string,  default: 'sampleHussarsKey'
variable :HUSSARS_SECRET,       :string,  default: 'sampleSecret'

# Other *.hussa.rs apps domains
variable :EATING_HOST,          :string,  default: ''
variable :VACATIONS_HOST,       :string,  default: ''

# Email settings
variable :SMTP_USER,            :string,  default: 'sampleUser'
variable :SMTP_PASS,            :string,  default: 'sampleKey'
variable :SMTP_PORT,            :string,  default: 'examplePort'
variable :SMTP_HOST,            :string,  default: 'exampleHost'
variable :MAILER_SENDER,        :string,  default: 'no-reply@hussa.rs'

# Supporting services configuration
variable :REDIS_URL,            :string,  default: 'redis://localhost:6379/'
variable :SENTRY_DSN,           :string,  default: 'sampleDsn'

# ... and standard rails' secret key base
variable :SECRET_KEY_BASE,      :string,  default: 'd126216c737ef43ef0a7479d619acf20503d3bc672c75e0a2f08eca09a8b680941abb33cf5d2aaa443525b313a1094b77e2ef3a831f84c2f709b53066950b96e'
